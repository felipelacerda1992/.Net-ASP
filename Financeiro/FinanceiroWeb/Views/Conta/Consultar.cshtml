
@{

    Layout = "~/Views/Shared/_template.cshtml";
}

<div class="row">
    <div class="col-md-12">
        
        <h2>CONSULTAR CONTA</h2>
        <h5>Aqui você consulta suas contas!</h5>

    </div>
</div>
<!-- /. ROW  -->
<hr />
<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Lista de Contas
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Banco</th>
                                <th>Agência </th>
                                <th>Número </th>
                                <th>Saldo </th>
                                <th>Status </th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in ViewBag.listarContas)
                            {
                                string sit = "";

                                if (item.Status)
                                {
                                    sit = "Ativo";
                                }
                                else
                                {
                                    sit = "Inativo";
                                }
                            <tr class="odd gradeX">
                                <td> @item.Banco</td>
                                <td> @item.Agencia</td>
                                <td> @item.Numero</td>
                                <td> @item.Saldo</td>
                                <td> @sit</td>
                                <td>
                                    <a href="/Conta/Alterar?cod=@item.Conta&banco=@item.CodBanco&agencia=@item.Agencia&numero=@item.Numero&saldo=@item.Saldo&status=@sit" class="btn btn-warning btn-xs">Alterar</a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>

